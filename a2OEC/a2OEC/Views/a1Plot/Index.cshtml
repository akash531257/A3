@model IEnumerable<a2OEC.Models.Plot>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Farm Name
                </th>
                <th>
                    Date Planted
                </th>
                <th>
                    Treatments
                </th>                           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Farm.Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePlanted)
            </td>
            <td>@Html.Raw(@item.Comments)</td>
            <td>
                <a asp-controller="APTreatment" asp-action="Index" asp-route-plotid="@item.PlotId" asp-route-farmname="@item.Farm.Name" >Manage treatments</a> |
                <a asp-action="Edit" asp-route-id="@item.PlotId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlotId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlotId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
